<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="samueltaylor.classicwarlordprototype.Fragments.fragInfo"
    android:transitionGroup="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/PanelColor"
        android:padding="5dp"
        android:id="@+id/lBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player: Red\nPhase: Mountains"
            android:id="@+id/txtInfo"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIcon"
            android:background="@drawable/mountainiconmd" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Turn"
        android:id="@+id/btnEndTurn"
        android:layout_gravity="bottom|right"
        android:background="@drawable/rectmenubutton"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:visibility="gone" />

</FrameLayout>
