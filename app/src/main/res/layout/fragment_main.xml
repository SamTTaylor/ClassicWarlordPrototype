<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="samueltaylor.classicwarlordprototype.Fragments.fragMain">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:background="@drawable/game_background"
        android:touchscreenBlocksFocus="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMatch"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="QUICKMATCH"
            android:width="200dp"
            android:textStyle="bold"
            android:height="40dp"
            android:elevation="5dp"
            android:background="@drawable/rectmenubutton"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInvite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="INVITE"
            android:width="200dp"
            android:textStyle="bold"
            android:height="40dp"
            android:elevation="5dp"
            android:background="@drawable/rectmenubutton"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="SETTINGS"
            android:width="200dp"
            android:textStyle="bold"
            android:height="40dp"
            android:elevation="5dp"
            android:background="@drawable/rectmenubutton"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRules"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="RULES"
            android:width="200dp"
            android:textStyle="bold"
            android:height="40dp"
            android:elevation="5dp"
            android:background="@drawable/rectmenubutton"
            android:layout_weight="1"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:id="@+id/btnGoogle"
        android:layout_gravity="right|top"
        android:background="@drawable/common_signin_btn_text_dark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInvites"
        android:background="@drawable/rectmenubutton"
        android:text="Invitations"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />
</FrameLayout>
