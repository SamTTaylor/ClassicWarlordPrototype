<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="samueltaylor.classicwarlordprototype.Fragments.fragDialog">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66000000"
        android:gravity="center_vertical|center_horizontal"
        android:clickable="true"
        android:longClickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/PanelColor"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Are you sure you wish to choose mountain &quot;Mountain&quot;?"
                android:id="@+id/txtDialogMessage"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:maxWidth="350dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/inputLayout"
                android:layout_marginBottom="15dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/btnMinus"
                    android:background="@drawable/rectmenubutton"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInput"
                    android:layout_gravity="center_horizontal"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:editable="false"
                    android:text="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:background="@drawable/rectmenubutton"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:id="@+id/btnConfirm"
                    android:textStyle="bold"
                    android:background="@drawable/rectmenubutton"
                    android:width="80dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btnCancel"
                    android:textStyle="bold"
                    android:background="@drawable/rectmenubutton"
                    android:width="80dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
